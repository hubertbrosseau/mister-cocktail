<h1>Detail of <%= @cocktail.name %></h1>

<h2>Ingredients:</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> --- <%= dose.ingredient.name %> </li>
  <% end %>
</ul>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>

<%= link_to "Back to list", cocktails_path, class: 'btn btn-warning' %>